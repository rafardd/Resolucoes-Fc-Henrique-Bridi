procedimento merge(s1,s2,sf:string)
var
	e1,e2:real
	f1,f2,ff:sequencia de real
inicio
	se abre(f1,s1) entao
		se abre(f2,s2) entao
			se cria(ff,sf) entao
				se nao fds(f1) entao
					leia(f1,e1)
				fimse
				se nao fds(f2) entao
					leia(f2,e2)
				fimse
				se e1 < e2
				enquanto nao fds(f1) e nao fds(f2) faca
					se e1 <= e2 entao
						escreva(ff,e1)
						leia(f1,e1)
					senao
						escreva(ff,e2)
						leia(f2,e2)
					fimse
				fim enquanto
				enquanto nao fds(f1) faca
					escreva(ff,e1)
					leia(f1,e1)
				fim enquanto
				enquanto nao fds(f2) faca
					escreva(ff,e2)
					leia(f2,e2)
				fim enquanto
				fecha(ff)
			fimse
			fecha(f2)
		fimse
		fecha(f1)
	fimse
fim funcao


						
				
